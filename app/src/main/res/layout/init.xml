<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:weightSum="1"
    android:orientation="vertical">

    <TextView
        android:layout_width="292dp"
        android:layout_height="58dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="192.168.43."
        android:id="@+id/ipAdd"
        android:layout_gravity="center_horizontal"
        android:editable="true"
        android:focusableInTouchMode="true"
        android:enabled="true"
        android:textSize="@dimen/abc_action_bar_progress_bar_size" />

    <TextView
        android:layout_width="238dp"
        android:layout_height="104dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView7"
        android:layout_gravity="center_horizontal"
        android:text="1. 192.168.43.43 2. 192.168.43.22 3. 192.168.43.213" />
    <CheckBox
        android:id="@+id/chkPlate1"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:text="@string/chk_plate_1"
        android:layout_gravity="left"
        android:layout_marginLeft="@android:dimen/app_icon_size"
        android:checked="true"
        android:elegantTextHeight="false"
        android:textSize="@dimen/abc_dialog_padding_material" />

    <CheckBox
        android:id="@+id/chkPlate2"
        android:layout_width="wrap_content"
        android:layout_height="53dp"
        android:text="@string/chk_plate_2"
        android:checked="false"
        android:layout_gravity="left"
        android:layout_marginLeft="@android:dimen/app_icon_size"
        android:textSize="@dimen/abc_dialog_padding_material" />

    <CheckBox
        android:id="@+id/chkPlate3"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:text="@string/chk_plate_3"
        android:layout_gravity="left"
        android:layout_marginLeft="@android:dimen/app_icon_size"
        android:textSize="@dimen/abc_dialog_padding_material" />

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="235dp"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="297dp"
            android:layout_height="131dp"
            android:text="Connect"
            android:id="@+id/connectbtn"
            android:layout_gravity="center_vertical" />
    </TableRow>
</LinearLayout>